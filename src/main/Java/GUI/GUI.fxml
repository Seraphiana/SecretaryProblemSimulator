<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="basePane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="571.0" prefWidth="722.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Java.GUI.GUIController">
    <children>

        <GridPane fx:id="topGrid" layoutX="10" layoutY="10" maxHeight="-Infinity" maxWidth="-Infinity">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="runButton" alignment="TOP_CENTER" contentDisplay="TOP" mnemonicParsing="false"
                        text="Run"/>
                <TextField text="0" fx:id="a" GridPane.rowIndex="1"/>
                <TextField text="0" fx:id="b" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField text="1" fx:id="c" GridPane.rowIndex="2"/>
                <TextField text="0" fx:id="d" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextField text="10" fx:id="max" GridPane.rowIndex="3"/>
                <TextField text="1" fx:id="freq" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Button fx:id="stopButton" mnemonicParsing="false" text="Stop" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <GridPane fx:id="bottomeGrid" layoutY="140" layoutX="10">
            <children>
                <TextField text="test" fx:id="algorithmChoice" prefWidth="150.0" GridPane.rowIndex="3"/>
                <ChoiceBox fx:id="matroidChoice" prefWidth="150.0" GridPane.rowIndex="2"/>
                <ChoiceBox fx:id="oracleChoice" prefWidth="150" GridPane.rowIndex="1"/>
            </children>
        </GridPane>

        <GridPane fx:id="solutionGrid" alignment="TOP_CENTER" layoutX="10" layoutY="240" prefHeight="100.0"
                  prefWidth="200.0">
            <children>
                <Text text="Solution" GridPane.rowIndex="0"/>
                <Text text="" fx:id="solution" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <GridPane fx:id="matroidGrid" alignment="TOP_CENTER" layoutX="420" layoutY="10" prefWidth="250" prefHeight="500">
            <children>
                <Text text="Matroid contents" GridPane.rowIndex="0"/>
                <Text text="" fx:id="matroidContents" GridPane.rowIndex="1"/>
            </children>

        </GridPane>
        <GridPane fx:id="optimalSolutionGrid" alignment="TOP_CENTER" layoutX="200" layoutY="10" prefWidth="250" prefHeight="500">
            <children>
                <Text text="Optimal solution" GridPane.rowIndex="0"/>
                <Text text="" fx:id="optimalSolution" GridPane.rowIndex="1"/>
            </children>

        </GridPane>
    </children>
</AnchorPane>
